<div class="homepage-featured-events">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="featured-events-wrap flex flex-wrap justify-content-between">
                    @{ int counter = 1;}
                    @{

                        foreach (var eventData in ViewBag.EventData)
                        {
                            var edate = Convert.ToDateTime(eventData.eventDate);
                            var eImagePath = @eventData.imagePath;
                            var eHalf = (counter > 3 && counter <=6) || (counter > 9)  ? " half" : "";
                            
