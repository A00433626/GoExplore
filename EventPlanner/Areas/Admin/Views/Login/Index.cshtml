@model EventPlanner.Areas.Admin.Models.LoginModel
@{
    ViewBag.Title = "GoExplore Login";
}

<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form action="@Url.Action("Index", "Login")" method="post">
            <div class="input-group mb-3">
                <input type="email" class="form-control" placeholder="Email" name="EmailId">
                @*<span id="exampleInputEmail1-error" class="error invalid-feedback">Please enter a email address</span>*@
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            @Html.ValidationMessageFor(x => x.EmailId, "", new { @class = "text-danger" })
            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Password" name="Password">
                <br />

                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        <p class="mb-1">
            <a href="forgot-password.html">I forgot my password</a>
        </p>
        <p class="mb-0">
            @*<a href="Registration/" class="text-center">Register a new membership</a>*@
            @Html.ActionLink("Register a new membership", "Index", "Registration")
        </p>
    </div>
    <!-- /.login-card-body -->
</div>
